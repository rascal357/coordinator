@page
@model WorkProgressModel
@{
    ViewData["Title"] = "Work Progress";
}

<div class="container-fluid px-4 py-3">
    <!-- Modern Header -->
    <div class="page-header mb-4">
        <div class="d-flex align-items-center">
            <div class="header-icon me-3">
                <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" fill="currentColor" viewBox="0 0 16 16">
                    <path d="M8 4.754a3.246 3.246 0 1 0 0 6.492 3.246 3.246 0 0 0 0-6.492zM5.754 8a2.246 2.246 0 1 1 4.492 0 2.246 2.246 0 0 1-4.492 0z"/>
                    <path d="M9.796 1.343c-.527-1.79-3.065-1.79-3.592 0l-.094.319a.873.873 0 0 1-1.255.52l-.292-.16c-1.64-.892-3.433.902-2.54 2.541l.159.292a.873.873 0 0 1-.52 1.255l-.319.094c-1.79.527-1.79 3.065 0 3.592l.319.094a.873.873 0 0 1 .52 1.255l-.16.292c-.892 1.64.901 3.434 2.541 2.54l.292-.159a.873.873 0 0 1 1.255.52l.094.319c.527 1.79 3.065 1.79 3.592 0l.094-.319a.873.873 0 0 1 1.255-.52l.292.16c1.64.893 3.434-.902 2.54-2.541l-.159-.292a.873.873 0 0 1 .52-1.255l.319-.094c1.79-.527 1.79-3.065 0-3.592l-.319-.094a.873.873 0 0 1-.52-1.255l.16-.292c.893-1.64-.902-3.433-2.541-2.54l-.292.159a.873.873 0 0 1-1.255-.52l-.094-.319z"/>
                </svg>
            </div>
            <div>
                <h1 class="page-title mb-0">Work Progress</h1>
                <p class="page-subtitle mb-0">炉処理進捗ダッシュボード</p>
            </div>
        </div>
    </div>

    <!-- Hidden form for CSRF token -->
    <form id="csrfForm" style="display:none;">
        @Html.AntiForgeryToken()
    </form>

    <!-- Filters Card -->
    <div class="filter-card mb-4">
        <div class="card-body">
            <div class="d-flex align-items-center justify-content-between mb-3">
                <h5 class="mb-0 fw-semibold d-flex align-items-center">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="me-2" viewBox="0 0 16 16">
                        <path d="M6 10.5a.5.5 0 0 1 .5-.5h3a.5.5 0 0 1 0 1h-3a.5.5 0 0 1-.5-.5zm-2-3a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7a.5.5 0 0 1-.5-.5zm-2-3a.5.5 0 0 1 .5-.5h11a.5.5 0 0 1 0 1h-11a.5.5 0 0 1-.5-.5z"/>
                    </svg>
                    フィルター
                </h5>
                <button class="btn btn-link text-decoration-none p-0" type="button" data-bs-toggle="collapse" data-bs-target="#filterCollapse" aria-expanded="true" aria-controls="filterCollapse" id="filterToggleBtn">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" id="filterToggleIcon" viewBox="0 0 16 16">
                        <path fill-rule="evenodd" d="M1.646 4.646a.5.5 0 0 1 .708 0L8 10.293l5.646-5.647a.5.5 0 0 1 .708.708l-6 6a.5.5 0 0 1-.708 0l-6-6a.5.5 0 0 1 0-.708z"/>
                    </svg>
                </button>
            </div>
            <div class="collapse show" id="filterCollapse">
                <form method="get" class="row g-3 align-items-end" id="filterForm">
                    <div class="col-md-4">
                        <label class="form-label fw-semibold">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="me-1" viewBox="0 0 16 16">
                                <path d="M6 10.5a.5.5 0 0 1 .5-.5h3a.5.5 0 0 1 0 1h-3a.5.5 0 0 1-.5-.5zm-2-3a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7a.5.5 0 0 1-.5-.5zm-2-3a.5.5 0 0 1 .5-.5h11a.5.5 0 0 1 0 1h-11a.5.5 0 0 1-.5-.5z"/>
                            </svg>
                            TYPE (複数選択可)
                        </label>
                        <div class="filter-type-box">
                            @foreach (var type in Model.Types)
                            {
                                <div class="form-check">
                                    <input class="form-check-input"
                                           type="checkbox"
                                           name="TypeFilter"
                                           value="@type"
                                           id="type-@type"
                                           checked="@(Model.TypeFilter?.Contains(type) == true)"
                                           onchange="document.getElementById('filterForm').submit()">
                                    <label class="form-check-label" for="type-@type">
                                        @type
                                    </label>
                                </div>
                            }
                        </div>
                    </div>
                    <div class="col-md-3">
                        <label for="lineFilter" class="form-label fw-semibold">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="me-1" viewBox="0 0 16 16">
                                <path d="M2.5 3.5a.5.5 0 0 1 0-1h11a.5.5 0 0 1 0 1h-11zm0 3a.5.5 0 0 1 0-1h11a.5.5 0 0 1 0 1h-11zm0 3a.5.5 0 0 1 0-1h11a.5.5 0 0 1 0 1h-11z"/>
                            </svg>
                            LINE
                        </label>
                        <select id="lineFilter" name="LineFilter" class="form-select modern-select" onchange="this.form.submit()">
                            <option value="">すべて</option>
                            @foreach (var line in Model.Lines)
                            {
                                <option value="@line" selected="@(Model.LineFilter == line)">@line</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-5 d-flex align-items-end gap-2">
                        <a href="/WorkProgress" class="btn btn-modern btn-secondary flex-fill">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="me-1" viewBox="0 0 16 16">
                                <path d="M2.146 2.854a.5.5 0 1 1 .708-.708L8 7.293l5.146-5.147a.5.5 0 0 1 .708.708L8.707 8l5.147 5.146a.5.5 0 0 1-.708.708L8 8.707l-5.146 5.147a.5.5 0 0 1-.708-.708L7.293 8 2.146 2.854Z"/>
                            </svg>
                            クリア
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Column Visibility Controls -->
    <div class="row mb-3">
        <div class="col-md-12">
            <div class="btn-group shadow-sm" role="group">
                <button type="button" class="btn btn-toggle btn-toggle-success" id="btn-inprocess" onclick="toggleColumns('inprocess')">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="me-2" viewBox="0 0 16 16" id="icon-inprocess-svg">
                        <path fill-rule="evenodd" d="M1.646 4.646a.5.5 0 0 1 .708 0L8 10.293l5.646-5.647a.5.5 0 0 1 .708.708l-6 6a.5.5 0 0 1-.708 0l-6-6a.5.5 0 0 1 0-.708z"/>
                    </svg>
                    <span id="icon-inprocess-text">処理中</span>
                </button>
                <button type="button" class="btn btn-toggle btn-toggle-warning" id="btn-waiting" onclick="toggleColumns('waiting')">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="me-2" viewBox="0 0 16 16" id="icon-waiting-svg">
                        <path fill-rule="evenodd" d="M1.646 4.646a.5.5 0 0 1 .708 0L8 10.293l5.646-5.647a.5.5 0 0 1 .708.708l-6 6a.5.5 0 0 1-.708 0l-6-6a.5.5 0 0 1 0-.708z"/>
                    </svg>
                    <span id="icon-waiting-text">処理待ち</span>
                </button>
            </div>
        </div>
    </div>

    <!-- Equipment Progress Table -->
    <div class="card">
        <div class="card-body p-0">
            <div class="table-responsive" style="max-height: 80vh; overflow-y: auto;">
                <table class="table table-bordered table-sm mb-0 compact-table">
                    <thead class="table-light sticky-header">
                        <tr>
                            <th rowspan="2" class="align-middle">TYPE</th>
                            <th rowspan="2" class="align-middle">装置名</th>
                            <th colspan="7" class="table-success text-center col-inprocess-header">処理中</th>
                            <th colspan="7" class="table-warning text-center col-waiting-header">処理待ち</th>
                            <th colspan="7" class="table-info text-center">予約1</th>
                            <th colspan="7" class="table-info text-center">予約2</th>
                            <th colspan="7" class="table-info text-center">予約3</th>
                        </tr>
                        <tr>
                            <!-- In Process sub-headers -->
                            <th class="table-success col-inprocess">Carrier</th>
                            <th class="table-success col-inprocess">Lot</th>
                            <th class="table-success col-inprocess">Qty</th>
                            <th class="table-success col-inprocess">PPID</th>
                            <th class="table-success col-inprocess">Next</th>
                            <th class="table-success col-inprocess">Loc</th>
                            <th class="table-success col-inprocess">End</th>
                            <!-- Waiting sub-headers -->
                            <th class="table-warning col-waiting">Carrier</th>
                            <th class="table-warning col-waiting">Lot</th>
                            <th class="table-warning col-waiting">Qty</th>
                            <th class="table-warning col-waiting">PPID</th>
                            <th class="table-warning col-waiting">Next</th>
                            <th class="table-warning col-waiting">Loc</th>
                            <th class="table-warning col-waiting">End</th>
                            <!-- Reserved 1 sub-headers -->
                            <th class="table-info">Carrier</th>
                            <th class="table-info">Lot</th>
                            <th class="table-info">Qty</th>
                            <th class="table-info">PPID</th>
                            <th class="table-info">Next</th>
                            <th class="table-info">Loc</th>
                            <th class="table-info">End</th>
                            <!-- Reserved 2 sub-headers -->
                            <th class="table-info">Carrier</th>
                            <th class="table-info">Lot</th>
                            <th class="table-info">Qty</th>
                            <th class="table-info">PPID</th>
                            <th class="table-info">Next</th>
                            <th class="table-info">Loc</th>
                            <th class="table-info">End</th>
                            <!-- Reserved 3 sub-headers -->
                            <th class="table-info">Carrier</th>
                            <th class="table-info">Lot</th>
                            <th class="table-info">Qty</th>
                            <th class="table-info">PPID</th>
                            <th class="table-info">Next</th>
                            <th class="table-info">Loc</th>
                            <th class="table-info">End</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var typeGroup in Model.EquipmentsByType)
                        {
                            @foreach (var (eqp, eqpIndex) in typeGroup.Value.Select((e, i) => (e, i)))
                            {
                                <tr id="eqp-@typeGroup.Key-@eqpIndex">
                                    <td class="fw-bold align-top">@typeGroup.Key</td>
                                    <td class="fw-bold align-top">
                                        <div>
                                            <a href="/WipLotList?EqpName=@Uri.EscapeDataString(eqp.EqpName)" class="text-decoration-none text-primary fw-bold">
                                                @eqp.EqpName
                                            </a>
                                        </div>
                                        <div>
                                            @if (!string.IsNullOrEmpty(eqp.Note))
                                            {
                                                <span class="text-secondary" id="note-@typeGroup.Key-@eqpIndex"><small>@eqp.Note</small></span>
                                            }
                                            else
                                            {
                                                <span class="text-muted" id="note-@typeGroup.Key-@eqpIndex"><small>(メモなし)</small></span>
                                            }
                                        </div>
                                        <div class="text-muted"><small>LINE: @eqp.Line</small></div>
                                        <div class="mt-2">
                                            <button type="button" class="btn-edit-note" onclick="openEditNoteModal('@eqp.EqpName', '@Html.Raw(eqp.Note?.Replace("'", "\\'"))', '@typeGroup.Key', @eqpIndex)" title="メモ編集">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="currentColor" viewBox="0 0 16 16">
                                                    <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z"/>
                                                </svg>
                                            </button>
                                        </div>
                                    </td>

                                    <!-- In Process -->
                                    @if (eqp.InProcess.Any())
                                    {
                                        @foreach (var field in new[] { "Carrier", "Lot", "Qty", "PPID", "NextFurnace", "Location", "EndTime" })
                                        {
                                            <td class="align-top col-inprocess" id="inprocess-@field.ToLower()-@typeGroup.Key-@eqpIndex">
                                                @foreach (var (item, idx) in eqp.InProcess.Select((it, i) => (it, i)))
                                                {
                                                    var value = field switch {
                                                        "Carrier" => item.Carrier,
                                                        "Lot" => item.Lot,
                                                        "Qty" => item.Qty.ToString(),
                                                        "PPID" => item.PPID,
                                                        "NextFurnace" => item.NextFurnace,
                                                        "Location" => item.Location,
                                                        "EndTime" => item.EndTime,
                                                        _ => ""
                                                    };
                                                    if (idx > 0) { <br/> }
                                                    <span id="inprocess-@field.ToLower()-@typeGroup.Key-@eqpIndex-@idx">@value</span>
                                                }
                                            </td>
                                        }
                                    }
                                    else
                                    {
                                        @for (int i = 0; i < 7; i++)
                                        {
                                            <td class="text-muted text-center col-inprocess">-</td>
                                        }
                                    }

                                    <!-- Waiting -->
                                    @if (eqp.Waiting.Any())
                                    {
                                        @foreach (var field in new[] { "Carrier", "Lot", "Qty", "PPID", "NextFurnace", "Location", "EndTime" })
                                        {
                                            <td class="align-top col-waiting" id="waiting-@field.ToLower()-@typeGroup.Key-@eqpIndex">
                                                @foreach (var (item, idx) in eqp.Waiting.Select((it, i) => (it, i)))
                                                {
                                                    var value = field switch {
                                                        "Carrier" => item.Carrier,
                                                        "Lot" => item.Lot,
                                                        "Qty" => item.Qty.ToString(),
                                                        "PPID" => item.PPID,
                                                        "NextFurnace" => item.NextFurnace,
                                                        "Location" => item.Location,
                                                        "EndTime" => item.EndTime,
                                                        _ => ""
                                                    };
                                                    if (idx > 0) { <br/> }
                                                    <span id="waiting-@field.ToLower()-@typeGroup.Key-@eqpIndex-@idx">@value</span>
                                                }
                                            </td>
                                        }
                                    }
                                    else
                                    {
                                        @for (int i = 0; i < 7; i++)
                                        {
                                            <td class="text-muted text-center col-waiting">-</td>
                                        }
                                    }

                                    <!-- Reserved 1 -->
                                    @if (eqp.Reserved1.Any())
                                    {
                                        @foreach (var field in new[] { "Carrier", "Lot", "Qty", "PPID", "NextFurnace", "Location", "EndTime" })
                                        {
                                            <td class="align-top" id="reserved1-@field.ToLower()-@typeGroup.Key-@eqpIndex">
                                                @foreach (var (item, idx) in eqp.Reserved1.Select((it, i) => (it, i)))
                                                {
                                                    var value = field switch {
                                                        "Carrier" => item.Carrier,
                                                        "Lot" => item.Lot,
                                                        "Qty" => item.Qty.ToString(),
                                                        "PPID" => item.PPID,
                                                        "NextFurnace" => item.NextFurnace,
                                                        "Location" => item.Location,
                                                        "EndTime" => item.EndTime,
                                                        _ => ""
                                                    };
                                                    if (idx > 0) { <br/> }
                                                    <span id="reserved1-@field.ToLower()-@typeGroup.Key-@eqpIndex-@idx">@value</span>
                                                }
                                                @if (field == "Carrier" && !string.IsNullOrEmpty(eqp.Reserved1BatchId))
                                                {
                                                    <br/>
                                                    <button type="button" class="btn btn-sm btn-danger mt-1" onclick="deleteBatch('@eqp.Reserved1BatchId', '@typeGroup.Key', @eqpIndex)">
                                                        ×
                                                    </button>
                                                }
                                            </td>
                                        }
                                    }
                                    else
                                    {
                                        @for (int i = 0; i < 7; i++)
                                        {
                                            <td class="text-muted text-center">-</td>
                                        }
                                    }

                                    <!-- Reserved 2 -->
                                    @if (eqp.Reserved2.Any())
                                    {
                                        @foreach (var field in new[] { "Carrier", "Lot", "Qty", "PPID", "NextFurnace", "Location", "EndTime" })
                                        {
                                            <td class="align-top" id="reserved2-@field.ToLower()-@typeGroup.Key-@eqpIndex">
                                                @foreach (var (item, idx) in eqp.Reserved2.Select((it, i) => (it, i)))
                                                {
                                                    var value = field switch {
                                                        "Carrier" => item.Carrier,
                                                        "Lot" => item.Lot,
                                                        "Qty" => item.Qty.ToString(),
                                                        "PPID" => item.PPID,
                                                        "NextFurnace" => item.NextFurnace,
                                                        "Location" => item.Location,
                                                        "EndTime" => item.EndTime,
                                                        _ => ""
                                                    };
                                                    if (idx > 0) { <br/> }
                                                    <span id="reserved2-@field.ToLower()-@typeGroup.Key-@eqpIndex-@idx">@value</span>
                                                }
                                                @if (field == "Carrier" && !string.IsNullOrEmpty(eqp.Reserved2BatchId))
                                                {
                                                    <br/>
                                                    <button type="button" class="btn btn-sm btn-danger mt-1" onclick="deleteBatch('@eqp.Reserved2BatchId', '@typeGroup.Key', @eqpIndex)">
                                                        ×
                                                    </button>
                                                }
                                            </td>
                                        }
                                    }
                                    else
                                    {
                                        @for (int i = 0; i < 7; i++)
                                        {
                                            <td class="text-muted text-center">-</td>
                                        }
                                    }

                                    <!-- Reserved 3 -->
                                    @if (eqp.Reserved3.Any())
                                    {
                                        @foreach (var field in new[] { "Carrier", "Lot", "Qty", "PPID", "NextFurnace", "Location", "EndTime" })
                                        {
                                            <td class="align-top" id="reserved3-@field.ToLower()-@typeGroup.Key-@eqpIndex">
                                                @foreach (var (item, idx) in eqp.Reserved3.Select((it, i) => (it, i)))
                                                {
                                                    var value = field switch {
                                                        "Carrier" => item.Carrier,
                                                        "Lot" => item.Lot,
                                                        "Qty" => item.Qty.ToString(),
                                                        "PPID" => item.PPID,
                                                        "NextFurnace" => item.NextFurnace,
                                                        "Location" => item.Location,
                                                        "EndTime" => item.EndTime,
                                                        _ => ""
                                                    };
                                                    if (idx > 0) { <br/> }
                                                    <span id="reserved3-@field.ToLower()-@typeGroup.Key-@eqpIndex-@idx">@value</span>
                                                }
                                                @if (field == "Carrier" && !string.IsNullOrEmpty(eqp.Reserved3BatchId))
                                                {
                                                    <br/>
                                                    <button type="button" class="btn btn-sm btn-danger mt-1" onclick="deleteBatch('@eqp.Reserved3BatchId', '@typeGroup.Key', @eqpIndex)">
                                                        ×
                                                    </button>
                                                }
                                            </td>
                                        }
                                    }
                                    else
                                    {
                                        @for (int i = 0; i < 7; i++)
                                        {
                                            <td class="text-muted text-center">-</td>
                                        }
                                    }
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Edit Note Modal -->
    <div class="modal fade" id="editNoteModal" tabindex="-1" aria-labelledby="editNoteModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content modern-modal">
                <div class="modal-header border-0 pb-0">
                    <h5 class="modal-title d-flex align-items-center" id="editNoteModalLabel">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="me-2 text-primary" viewBox="0 0 16 16">
                            <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z"/>
                        </svg>
                        装置メモ編集
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body pt-3">
                    <form id="editNoteForm">
                        <input type="hidden" id="editEqpName" />
                        <input type="hidden" id="editTypeKey" />
                        <input type="hidden" id="editEqpIndex" />
                        <div class="mb-4">
                            <label for="editEqpNameDisplay" class="form-label fw-semibold d-flex align-items-center">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="me-2" viewBox="0 0 16 16">
                                    <path d="M8 4.754a3.246 3.246 0 1 0 0 6.492 3.246 3.246 0 0 0 0-6.492zM5.754 8a2.246 2.246 0 1 1 4.492 0 2.246 2.246 0 0 1-4.492 0z"/>
