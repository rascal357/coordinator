<script>
    // Edit Note Modal functions
    function openEditNoteModal(eqpName, currentNote, typeKey, eqpIndex) {
        document.getElementById('editEqpName').value = eqpName;
        document.getElementById('editEqpNameDisplay').value = eqpName;
        document.getElementById('editTypeKey').value = typeKey;
        document.getElementById('editEqpIndex').value = eqpIndex;
        document.getElementById('editNoteText').value = currentNote || '';
        updateCharCount();

        var modal = new bootstrap.Modal(document.getElementById('editNoteModal'));
        modal.show();
    }

    function updateCharCount() {
        var text = document.getElementById('editNoteText').value;
        document.getElementById('noteCharCount').textContent = text.length;
    }

    // Update char count on input
    document.addEventListener('DOMContentLoaded', function() {
        var noteTextarea = document.getElementById('editNoteText');
        if (noteTextarea) {
            noteTextarea.addEventListener('input', updateCharCount);
        }
    });

    async function saveNote() {
        var eqpName = document.getElementById('editEqpName').value;
        var noteText = document.getElementById('editNoteText').value;
        var typeKey = document.getElementById('editTypeKey').value;
        var eqpIndex = document.getElementById('editEqpIndex').value;

        try {
            const token = document.querySelector('input[name="__RequestVerificationToken"]').value;
            const formData = new FormData();
            formData.append('eqpName', eqpName);
            formData.append('note', noteText);
            formData.append('__RequestVerificationToken', token);

            const response = await fetch('/WorkProgress?handler=UpdateNote', {
                method: 'POST',
                body: formData
            });

            const result = await response.json();

            if (result.success) {
                // Update the note display on the page
                var noteElement = document.getElementById('note-' + typeKey + '-' + eqpIndex);
                if (noteElement) {
                    if (noteText) {
                        noteElement.innerHTML = '<small>' + escapeHtml(noteText) + '</small>';
                        noteElement.className = 'text-secondary';
                    } else {
                        noteElement.innerHTML = '<small>(メモなし)</small>';
                        noteElement.className = 'text-muted';
                    }
                }

                // Close modal
                var modal = bootstrap.Modal.getInstance(document.getElementById('editNoteModal'));
                modal.hide();

                // Show success message
                alert('メモを更新しました');
            } else {
                alert('更新に失敗しました: ' + result.message);
            }
        } catch (error) {
            console.error('更新エラー:', error);
            alert('更新中にエラーが発生しました');
        }
    }

    function escapeHtml(text) {
        var map = {
            '&': '&amp;',
            '<': '&lt;',
            '>': '&gt;',
            '"': '&quot;',
            "'": '&#039;'
        };
        return text.replace(/[&<>"']/g, function(m) { return map[m]; });
    }

    // カラムの折りたたみ機能
    function toggleColumns(type) {
        // 2段目のヘッダーとデータセル
        const columns = document.querySelectorAll('.col-' + type);
        // 1段目のヘッダー
        const headerColumns = document.querySelectorAll('.col-' + type + '-header');
        const iconSvg = document.getElementById('icon-' + type + '-svg');

        let isVisible = true;
        columns.forEach(col => {
            if (col.style.display === 'none') {
                col.style.display = '';
                isVisible = true;
            } else {
                col.style.display = 'none';
                isVisible = false;
            }
        });

        // 1段目のヘッダーも同様に表示/非表示
        headerColumns.forEach(col => {
            col.style.display = isVisible ? '' : 'none';
        });

        // SVGアイコンの更新（下向き矢印↔右向き矢印）
        if (iconSvg) {
            if (isVisible) {
                // 下向き矢印
                iconSvg.innerHTML = '<path fill-rule="evenodd" d="M1.646 4.646a.5.5 0 0 1 .708 0L8 10.293l5.646-5.647a.5.5 0 0 1 .708.708l-6 6a.5.5 0 0 1-.708 0l-6-6a.5.5 0 0 1 0-.708z"/>';
            } else {
                // 右向き矢印
                iconSvg.innerHTML = '<path fill-rule="evenodd" d="M4.646 1.646a.5.5 0 0 1 .708 0l6 6a.5.5 0 0 1 0 .708l-6 6a.5.5 0 0 1-.708-.708L10.293 8 4.646 2.354a.5.5 0 0 1 0-.708z"/>';
            }
        }
    }

    // バッチ削除機能
    async function deleteBatch(batchId, typeKey, eqpIndex) {
        if (!confirm('この予約情報を削除してもよろしいですか？')) {
            return;
        }

        try {
            const formData = new FormData();
            formData.append('batchId', batchId);

            const response = await fetch('/WorkProgress?handler=DeleteBatch', {
                method: 'POST',
                headers: {
                    'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                },
                body: formData
            });

            const result = await response.json();

            if (result.success) {
                // ページをリロードして最新データを表示
                location.reload();
            } else {
                alert('削除に失敗しました: ' + result.message);
            }
        } catch (error) {
            console.error('削除エラー:', error);
            alert('削除中にエラーが発生しました');
        }
    }

    // ヘッダーの高さを動的に調整
    document.addEventListener('DOMContentLoaded', function() {
        // 2段目ヘッダーの位置調整
        const firstRowHeaders = document.querySelectorAll('.sticky-header tr:first-child th');
        if (firstRowHeaders.length > 0) {
            const firstRowHeight = firstRowHeaders[2].offsetHeight;
            const secondRowHeaders = document.querySelectorAll('.sticky-header tr:nth-child(2) th');
            secondRowHeaders.forEach(th => {
                th.style.top = firstRowHeight + 'px';
            });
        }
    });

    // 自動更新機能 - 5分（300,000ミリ秒）ごとにデータを更新
    const AUTO_REFRESH_INTERVAL = 5 * 60 * 1000; // 5分
    let autoRefreshTimer;

    // 現在のフィルター設定を取得
    function getCurrentFilters() {
        const typeFilters = Array.from(document.querySelectorAll('input[name="TypeFilter"]:checked'))
            .map(cb => cb.value);
        const lineFilter = document.getElementById('lineFilter').value;

        return {
            typeFilters: typeFilters,
            lineFilter: lineFilter
        };
    }

    // データを更新
    async function refreshData() {
        try {
            const filters = getCurrentFilters();

            // クエリパラメータを構築
            const params = new URLSearchParams();
            filters.typeFilters.forEach(type => params.append('TypeFilter', type));
            if (filters.lineFilter) {
                params.append('LineFilter', filters.lineFilter);
            }
            params.append('handler', 'Refresh');

            const response = await fetch(`/WorkProgress?${params.toString()}`);

            if (!response.ok) {
                console.error('データの取得に失敗しました:', response.statusText);
                return;
            }

            const result = await response.json();

            // Log response data to console
            console.log('Response data:', result);

            if (result.success && result.data) {
                updateUI(result.data);
                console.log('データを更新しました:', new Date().toLocaleString('ja-JP'));
            }
        } catch (error) {
            console.error('データ更新エラー:', error);
        }
    }

    // UIを更新
    function updateUI(equipmentsByType) {
        for (const [typeKey, equipments] of Object.entries(equipmentsByType)) {
            equipments.forEach((eqp, eqpIndex) => {
                // 処理中データの更新
                updateProcessItems('inprocess', typeKey, eqpIndex, eqp.InProcess);

                // 処理待ちデータの更新
                updateProcessItems('waiting', typeKey, eqpIndex, eqp.Waiting);

                // 予約1-3データの更新
                updateReservedItems('reserved1', typeKey, eqpIndex, eqp.Reserved1);
                updateReservedItems('reserved2', typeKey, eqpIndex, eqp.Reserved2);
                updateReservedItems('reserved3', typeKey, eqpIndex, eqp.Reserved3);
            });
        }
    }

    // 処理中/処理待ちアイテムを更新
    function updateProcessItems(prefix, typeKey, eqpIndex, items) {
        if (!items || items.length === 0) return;

        items.forEach((item, idx) => {
            updateElement(`${prefix}-carrier-${typeKey}-${eqpIndex}-${idx}`, item.Carrier);
            updateElement(`${prefix}-lot-${typeKey}-${eqpIndex}-${idx}`, item.Lot);
            updateElement(`${prefix}-qty-${typeKey}-${eqpIndex}-${idx}`, item.Qty);
            updateElement(`${prefix}-ppid-${typeKey}-${eqpIndex}-${idx}`, item.PPID);
            updateElement(`${prefix}-next-${typeKey}-${eqpIndex}-${idx}`, item.NextFurnace);
            updateElement(`${prefix}-loc-${typeKey}-${eqpIndex}-${idx}`, item.Location);
            updateElement(`${prefix}-time-${typeKey}-${eqpIndex}-${idx}`, item.EndTime);
        });
    }

    // 予約アイテムを更新
    function updateReservedItems(prefix, typeKey, eqpIndex, items) {
        if (!items || items.length === 0) return;

        items.forEach((item, idx) => {
            updateElement(`${prefix}-carrier-${typeKey}-${eqpIndex}-${idx}`, item.Carrier);
            updateElement(`${prefix}-lot-${typeKey}-${eqpIndex}-${idx}`, item.Lot);
            updateElement(`${prefix}-qty-${typeKey}-${eqpIndex}-${idx}`, item.Qty);
            updateElement(`${prefix}-ppid-${typeKey}-${eqpIndex}-${idx}`, item.PPID);
            updateElement(`${prefix}-next-${typeKey}-${eqpIndex}-${idx}`, item.NextFurnace);
            updateElement(`${prefix}-loc-${typeKey}-${eqpIndex}-${idx}`, item.Location);
        });
    }

    // DOM要素の内容を更新
    function updateElement(elementId, value) {
        const element = document.getElementById(elementId);
        if (element) {
            element.textContent = value ?? '';
        }
    }

    // 自動更新を開始
    function startAutoRefresh() {
        // 既存のタイマーをクリア
        if (autoRefreshTimer) {
            clearInterval(autoRefreshTimer);
        }

        // 新しいタイマーを設定
        autoRefreshTimer = setInterval(refreshData, AUTO_REFRESH_INTERVAL);
        console.log('自動更新を開始しました（5分間隔）');
    }

    // 自動更新を停止
    function stopAutoRefresh() {
        if (autoRefreshTimer) {
            clearInterval(autoRefreshTimer);
            autoRefreshTimer = null;
            console.log('自動更新を停止しました');
        }
    }

    // ページロード時に自動更新を開始
    document.addEventListener('DOMContentLoaded', function() {
        startAutoRefresh();
    });

    // ページを離れる時に自動更新を停止
    window.addEventListener('beforeunload', function() {
        stopAutoRefresh();
    });

    // フィルターの折りたたみアイコンを切り替え
    document.addEventListener('DOMContentLoaded', function() {
        const filterCollapse = document.getElementById('filterCollapse');
        const filterToggleIcon = document.getElementById('filterToggleIcon');

        if (filterCollapse && filterToggleIcon) {
            filterCollapse.addEventListener('show.bs.collapse', function() {
                // 展開時: 下向き矢印
                filterToggleIcon.innerHTML = '<path fill-rule="evenodd" d="M1.646 4.646a.5.5 0 0 1 .708 0L8 10.293l5.646-5.647a.5.5 0 0 1 .708.708l-6 6a.5.5 0 0 1-.708 0l-6-6a.5.5 0 0 1 0-.708z"/>';
            });

            filterCollapse.addEventListener('hide.bs.collapse', function() {
                // 折りたたみ時: 右向き矢印
                filterToggleIcon.innerHTML = '<path fill-rule="evenodd" d="M4.646 1.646a.5.5 0 0 1 .708 0l6 6a.5.5 0 0 1 0 .708l-6 6a.5.5 0 0 1-.708-.708L10.293 8 4.646 2.354a.5.5 0 0 1 0-.708z"/>';
            });
        }
    });
</script>
