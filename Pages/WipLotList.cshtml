<script>
    document.addEventListener('DOMContentLoaded', function() {
        const form = document.getElementById('wipForm');
        const table = document.getElementById('wipTable');
        const tbody = table.querySelector('tbody');
        let currentSort = { column: null, direction: null };

        // Form submission handler
        form.addEventListener('submit', function(e) {
            const container = document.getElementById('selectedWipDataContainer');
            container.innerHTML = ''; // Clear existing hidden fields

            const checkboxes = document.querySelectorAll('.wip-checkbox:checked');

            if (checkboxes.length === 0) {
                e.preventDefault();
                alert('キャリアを選択してください');
                return false;
            }

            checkboxes.forEach((checkbox, index) => {
                const row = checkbox.closest('tr');
                const wipData = {
                    Carrier: row.dataset.carrier,
                    LotId: row.dataset.lotid,
                    Technology: row.dataset.technology,
                    Qty: row.dataset.qty,
                    TargetStage: row.dataset.targetstage,
                    TargetStep: row.dataset.targetstep,
                    State: row.dataset.state,
                    Next1: row.dataset.next1,
                    Next2: row.dataset.next2,
                    Next3: row.dataset.next3
                };

                // Create hidden fields for selected WIP data
                Object.keys(wipData).forEach(key => {
                    const input = document.createElement('input');
                    input.type = 'hidden';
                    input.name = `WipData[${index}].${key}`;
                    input.value = wipData[key] || '';
                    container.appendChild(input);
                });
            });
        });

        // Filter functionality
        const filterInputs = document.querySelectorAll('.filter-input');
        const filterSelects = document.querySelectorAll('.filter-select');

        filterInputs.forEach(input => {
            input.addEventListener('input', function() {
                applyFilters();
            });
        });

        filterSelects.forEach(select => {
            select.addEventListener('change', function() {
                applyFilters();
            });
        });

        function applyFilters() {
            const filters = {};

            // Collect text input filters
            filterInputs.forEach(input => {
                const column = input.dataset.column;
                const value = input.value.toLowerCase().trim();
                if (value) {
                    filters[column] = { value: value, type: 'input' };
                }
            });

            // Collect select filters
            filterSelects.forEach(select => {
                const column = select.dataset.column;
                const value = select.value.trim();
                if (value) {
                    filters[column] = { value: value.toLowerCase(), type: 'select' };
                }
            });

            const rows = tbody.querySelectorAll('.table-row-modern');
            rows.forEach(row => {
                let shouldShow = true;

                for (const [column, filterObj] of Object.entries(filters)) {
                    let cellValue = '';

                    // Get cell value based on column
                    const columnIndex = getColumnIndex(column);
                    if (columnIndex >= 0) {
                        const cell = row.cells[columnIndex];
                        if (cell) {
                            cellValue = cell.textContent.toLowerCase().trim();
                        }
                    }

                    // Apply filter based on type
                    if (filterObj.type === 'select') {
                        // Exact match for select filters
                        if (cellValue !== filterObj.value) {
                            shouldShow = false;
                            break;
                        }
                    } else {
                        // Partial match for text input filters
                        if (!cellValue.includes(filterObj.value)) {
                            shouldShow = false;
                            break;
                        }
                    }
                }

                if (shouldShow) {
                    row.classList.remove('hidden');
                } else {
                    row.classList.add('hidden');
                }
            });
        }

        function getColumnIndex(columnName) {
            const columnMap = {
                'priority': 1,
                'technology': 2,
                'carrier': 3,
                'lotid': 4,
                'qty': 5,
                'state': 6,
                'partname': 7,
                'currentstage': 8,
                'currentstep': 9,
                'targetstage': 10,
                'targetstep': 11,
                'targetppid': 12,
                'next1': 13
            };
            return columnMap[columnName] || -1;
        }

        // Sort functionality
        const sortableHeaders = document.querySelectorAll('.sortable');
        sortableHeaders.forEach(header => {
            header.addEventListener('click', function() {
                const column = this.dataset.column;
                const columnIndex = getColumnIndex(column);

                if (columnIndex < 0) return;

                // Determine sort direction
                let direction = 'asc';
                if (currentSort.column === column) {
                    if (currentSort.direction === 'asc') {
                        direction = 'desc';
                    } else if (currentSort.direction === 'desc') {
                        direction = null; // Reset to original order
                    }
                }

                // Update sort state
                currentSort.column = direction ? column : null;
                currentSort.direction = direction;

                // Update UI
                sortableHeaders.forEach(h => {
                    h.classList.remove('sorted-asc', 'sorted-desc');
                });

                if (direction) {
                    this.classList.add(direction === 'asc' ? 'sorted-asc' : 'sorted-desc');
                    sortTable(columnIndex, direction);
                } else {
                    // Reset to original order by reloading or storing original order
                    resetTableOrder();
                }
            });
        });

        // Store original order
        const originalOrder = Array.from(tbody.querySelectorAll('.table-row-modern'));

        function sortTable(columnIndex, direction) {
            const rows = Array.from(tbody.querySelectorAll('.table-row-modern'));

            rows.sort((a, b) => {
                const aValue = a.cells[columnIndex].textContent.trim();
                const bValue = b.cells[columnIndex].textContent.trim();

                // Try to parse as numbers for numeric columns
                const aNum = parseFloat(aValue);
                const bNum = parseFloat(bValue);

                let comparison = 0;
                if (!isNaN(aNum) && !isNaN(bNum)) {
                    comparison = aNum - bNum;
                } else {
                    comparison = aValue.localeCompare(bValue);
                }

                return direction === 'asc' ? comparison : -comparison;
            });

            // Re-append rows in sorted order
            rows.forEach(row => tbody.appendChild(row));
        }

        function resetTableOrder() {
