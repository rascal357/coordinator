@page
@model WipLotListModel
@{
    ViewData["Title"] = "WIP Lot List";
}

<div class="container-fluid px-4 py-3">
    <!-- Modern Header -->
    <div class="page-header mb-4">
        <div class="d-flex align-items-center justify-content-between">
            <div class="d-flex align-items-center">
                <div class="header-icon me-3">
                    <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" fill="currentColor" viewBox="0 0 16 16">
                        <path d="M1 2.5A1.5 1.5 0 0 1 2.5 1h3A1.5 1.5 0 0 1 7 2.5v3A1.5 1.5 0 0 1 5.5 7h-3A1.5 1.5 0 0 1 1 5.5v-3zm8 0A1.5 1.5 0 0 1 10.5 1h3A1.5 1.5 0 0 1 15 2.5v3A1.5 1.5 0 0 1 13.5 7h-3A1.5 1.5 0 0 1 9 5.5v-3zm-8 8A1.5 1.5 0 0 1 2.5 9h3A1.5 1.5 0 0 1 7 10.5v3A1.5 1.5 0 0 1 5.5 15h-3A1.5 1.5 0 0 1 1 13.5v-3zm8 0A1.5 1.5 0 0 1 10.5 9h3a1.5 1.5 0 0 1 1.5 1.5v3a1.5 1.5 0 0 1-1.5 1.5h-3A1.5 1.5 0 0 1 9 13.5v-3z"/>
                    </svg>
                </div>
                <div>
                    <h1 class="page-title mb-0">WIP Lot List</h1>
                    <p class="page-subtitle mb-0">装置: @Model.EqpName</p>
                </div>
            </div>
            <div>
                <a href="/" class="btn btn-modern btn-secondary">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="me-1" viewBox="0 0 16 16">
                        <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z"/>
                    </svg>
                    Dashboard
                </a>
            </div>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(Model.Message))
    {
        <div class="modern-alert alert-warning mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="me-2" viewBox="0 0 16 16">
                <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"/>
            </svg>
            @Model.Message
            <button type="button" class="btn-close-modern" onclick="this.parentElement.remove()">×</button>
        </div>
    }

    @if (Model.WipLots.Any())
    {
        <form method="post">
            <input type="hidden" name="EqpName" value="@Model.EqpName" />

            @* Hidden fields for WIP data - to be submitted when checkbox is selected *@
            @foreach (var (wip, index) in Model.WipLots.Select((w, i) => (w, i)))
            {
                <input type="hidden" name="WipData[@index].Carrier" value="@wip.Carrier" />
                <input type="hidden" name="WipData[@index].LotId" value="@wip.LotId" />
                <input type="hidden" name="WipData[@index].Technology" value="@wip.Technology" />
                <input type="hidden" name="WipData[@index].Qty" value="@wip.Qty" />
                <input type="hidden" name="WipData[@index].TargetStage" value="@wip.TargetStage" />
                <input type="hidden" name="WipData[@index].TargetStep" value="@wip.TargetStep" />
            }

            <!-- Table Card -->
            <div class="card modern-card mb-4">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table modern-table mb-0">
                            <thead>
                                <tr>
                                    <th class="table-header-modern">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="me-1" viewBox="0 0 16 16">
                                            <path d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708l-3-3zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207l6.5-6.5zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.499.499 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11l.178-.178z"/>
                                        </svg>
                                        選択
                                    </th>
                                    <th class="table-header-modern">Priority</th>
                                    <th class="table-header-modern">Technology</th>
                                    <th class="table-header-modern">Carrier</th>
                                    <th class="table-header-modern">LotId</th>
                                    <th class="table-header-modern">Qty</th>
                                    <th class="table-header-modern">PartName</th>
                                    <th class="table-header-modern">CurrentStage</th>
                                    <th class="table-header-modern">CurrentStep</th>
                                    <th class="table-header-modern">TargetStage</th>
                                    <th class="table-header-modern">TargetStep</th>
                                    <th class="table-header-modern">TargetPPID</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var (wip, index) in Model.WipLots.Select((w, i) => (w, i)))
                                {
                                    <tr class="table-row-modern">
                                        <td>
                                            <input type="checkbox"
                                                   name="SelectedIndices"
                                                   value="@index"
                                                   id="carrier-@wip.Id"
                                                   class="form-check-input modern-checkbox" />
                                        </td>
                                        <td id="priority-@wip.Id">@wip.Priority</td>
                                        <td id="technology-@wip.Id">@wip.Technology</td>
                                        <td id="carrier-name-@wip.Id"><strong>@wip.Carrier</strong></td>
                                        <td id="lotid-@wip.Id">@wip.LotId</td>
                                        <td id="qty-@wip.Id">@wip.Qty</td>
                                        <td id="partname-@wip.Id">@wip.PartName</td>
                                        <td id="currentstage-@wip.Id">@wip.CurrentStage</td>
                                        <td id="currentstep-@wip.Id">@wip.CurrentStep</td>
                                        <td id="targetstage-@wip.Id">@wip.TargetStage</td>
                                        <td id="targetstep-@wip.Id">@wip.TargetStep</td>
                                        <td id="targetppid-@wip.Id">@wip.TargetPPID</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <div class="action-bar">
                <button type="submit" class="btn btn-modern btn-primary btn-lg">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="me-2" viewBox="0 0 16 16">
                        <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                        <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"/>
                    </svg>
                    バッチ作成
                </button>
            </div>
        </form>
    }
    else
    {
        <div class="modern-alert alert-info">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="me-2" viewBox="0 0 16 16">
                <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                <path d="m8.93 6.588-2.29.287-.082.38.45.083c.294.07.352.176.288.469l-.738 3.468c-.194.897.105 1.319.808 1.319.545 0 1.178-.252 1.465-.598l.088-.416c-.2.176-.492.246-.686.246-.275 0-.375-.193-.304-.533L8.93 6.588zM9 4.5a1 1 0 1 1-2 0 1 1 0 0 1 2 0z"/>
            </svg>
            指定された装置(@Model.EqpName)に対するWIPロットが見つかりません。
        </div>
    }
</div>

<style>
    :root {
        --primary-color: #0d6efd;
        --success-color: #198754;
        --card-shadow: 0 2px 4px rgba(0, 0, 0, 0.08);
        --transition-speed: 0.2s;
    }

    body {
        background: #f8f9fa;
        min-height: 100vh;
    }

    .page-header {
        background: #0d6efd;
        border-radius: 8px;
        padding: 1.5rem 2rem;
        box-shadow: var(--card-shadow);
        color: white;
    }

    .header-icon {
        background: rgba(255, 255, 255, 0.15);
        border-radius: 8px;
        padding: 0.5rem;
    }

    .page-title {
        font-size: 1.75rem;
        font-weight: 600;
    }

    .page-subtitle {
        opacity: 0.95;
        font-size: 0.95rem;
    }

    .modern-card {
        border-radius: 8px;
        box-shadow: var(--card-shadow);
        border: 1px solid #dee2e6;
        overflow: hidden;
    }

    .modern-table {
        border-collapse: separate;
        border-spacing: 0;
    }

    .table-header-modern {
        background: #f8f9fa;
        font-weight: 600;
        padding: 0.75rem;
        border-bottom: 2px solid #dee2e6;
        position: sticky;
        top: 0;
        z-index: 10;
    }

    .table-row-modern {
        transition: background-color var(--transition-speed);
    }

    .table-row-modern:hover {
        background-color: #f8f9fa;
    }

    .table-row-modern td {
        padding: 0.75rem;
        vertical-align: middle;
        border-top: 1px solid #dee2e6;
    }

    .modern-checkbox {
        width: 18px;
        height: 18px;
        cursor: pointer;
    }

    .modern-checkbox:checked {
        background-color: #0d6efd;
        border-color: #0d6efd;
    }

    .btn-modern {
        border-radius: 6px;
        padding: 0.5rem 1.25rem;
        font-weight: 500;
        border: none;
        transition: all var(--transition-speed);
    }

    .btn-modern.btn-primary {
        background: #0d6efd;
        color: white;
    }

    .btn-modern.btn-primary:hover {
        background: #0b5ed7;
    }

    .btn-modern.btn-secondary {
        background: #6c757d;
        color: white;
    }

    .btn-modern.btn-secondary:hover {
        background: #5c636a;
    }

    .action-bar {
        display: flex;
        justify-content: flex-end;
        gap: 1rem;
    }

    .modern-alert {
        border-radius: 6px;
        padding: 1rem 1.5rem;
        display: flex;
        align-items: center;
        position: relative;
        border: 1px solid;
        box-shadow: var(--card-shadow);
    }

    .modern-alert.alert-warning {
        background: #fff3cd;
        color: #664d03;
        border-color: #ffecb5;
    }

    .modern-alert.alert-info {
        background: #cfe2ff;
        color: #084298;
        border-color: #b6d4fe;
    }

    .btn-close-modern {
        position: absolute;
        right: 1rem;
        background: none;
        border: none;
        font-size: 1.5rem;
        cursor: pointer;
        opacity: 0.5;
        transition: opacity var(--transition-speed);
    }

    .btn-close-modern:hover {
        opacity: 0.75;
    }

    .table-responsive::-webkit-scrollbar {
        width: 8px;
        height: 8px;
    }

    .table-responsive::-webkit-scrollbar-track {
        background: #f1f1f1;
        border-radius: 4px;
    }

    .table-responsive::-webkit-scrollbar-thumb {
        background: #6c757d;
        border-radius: 4px;
    }

    .table-responsive::-webkit-scrollbar-thumb:hover {
        background: #495057;
    }
</style>
