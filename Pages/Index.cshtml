@page
@model IndexModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="container mt-4">
    <h1>Dashboard - 装置稼働状況</h1>

    <!-- Filters -->
    <div class="row mt-4 mb-3">
        <div class="col-md-12">
            <form method="get" class="row g-3" id="filterForm">
                <div class="col-md-4">
                    <label class="form-label">TYPE (複数選択可)</label>
                    <div class="border rounded p-2" style="max-height: 150px; overflow-y: auto;">
                        @foreach (var type in Model.Types)
                        {
                            <div class="form-check">
                                <input class="form-check-input"
                                       type="checkbox"
                                       name="TypeFilter"
                                       value="@type"
                                       id="type-@type"
                                       checked="@(Model.TypeFilter?.Contains(type) == true)"
                                       onchange="document.getElementById('filterForm').submit()">
                                <label class="form-check-label" for="type-@type">
                                    @type
                                </label>
                            </div>
                        }
                    </div>
                </div>
                <div class="col-md-3">
                    <label for="lineFilter" class="form-label">LINE</label>
                    <select id="lineFilter" name="LineFilter" class="form-select" onchange="this.form.submit()">
                        <option value="">すべて</option>
                        @foreach (var line in Model.Lines)
                        {
                            <option value="@line" selected="@(Model.LineFilter == line)">@line</option>
                        }
                    </select>
                </div>
                <div class="col-md-5 d-flex align-items-end">
                    <a href="/" class="btn btn-secondary me-2">フィルタークリア</a>
                    <a href="/WorkProgress" class="btn btn-primary">Work Progress画面へ</a>
                </div>
            </form>
        </div>
    </div>

    <!-- Equipment List by Type -->
    <div class="row">
        <div class="col-md-12">
            @{
                var groupedEquipments = Model.Equipments.GroupBy(e => e.Type);
            }
            @foreach (var group in groupedEquipments)
            {
                <div class="card mb-3">
                    <div class="card-header">
                        <h5>TYPE: @group.Key</h5>
                    </div>
                    <div class="card-body">
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>NAME</th>
                                    <th>LINE</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var eqp in group)
                                {
                                    <tr>
                                        <td>
                                            <a href="/WipLotList?eqpName=@eqp.Name"
                                               id="eqp-name-@eqp.Id"
                                               class="btn btn-link">
                                                @eqp.Name
                                            </a>
                                        </td>
                                        <td id="eqp-line-@eqp.Id">@eqp.Line</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
